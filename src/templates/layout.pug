                section.section
                    h3.title 로그인
                    form.form
                        p.field
                            label 이메일
                            input(type="text")
                            button.clear
                                svg(viewBox="0 0 24 24")
                                    path.line(d="M2 2L22 22")
                                    path.long(d="M9 15L20 4")
                                    path.arrow(d="M13 11V7")
                                    path.arrow(d="M17 11H13")
                        p.field
                            span.dots
                            label 패스워드
                            input(type="password")
                            span.cursor
                            span.line
                                svg
                                    use(xlink:href="#line")
                            span.tick
                                svg
                                    use(xlink:href="#tick")
                        button(type="submit" disabled)
                            svg(viewBox="0 0 16 16")
                                circle(stroke-opacity=".1" cx="8" cy="8" r="6")
                                circle.load(cx="8" cy="8" r="6")
