doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My Site - #{title}
        link(rel="shortcut icon", href="#")
        link(rel="stylesheet", href="./assets/stylesheets/styles.css", type="text/css")
    body
        .wrapper
            include ../particles/header

            article.container.login
                h2.invisible login page
                section.section
                    h3.title 로그인
                    form.form
                        p.field
                            label 이메일
                            input(type="text")
                            button.clear
                                svg(viewBox="0 0 24 24")
                                    path.line(d="M2 2L22 22")
                                    path.long(d="M9 15L20 4")
                                    path.arrow(d="M13 11V7")
                                    path.arrow(d="M17 11H13")
                        p.field
                            span.dots
                            label 패스워드
                            input(type="password")
                            span.cursor
                            span.line
                                svg
                                    use(xlink:href="#line")
                            span.tick
                                svg
                                    use(xlink:href="#tick")
                        button(type="submit" disabled)
                            svg(viewBox="0 0 16 16")
                                circle(stroke-opacity=".1" cx="8" cy="8" r="6")
                                circle.load(cx="8" cy="8" r="6")
                            span 확인
                    label.radio
                        input(type="radio" name="radio" value="1" checked)
                        svg(viewBox="0 0 24 24" filter="url(#goo-light)")
                            circle.top(cx="12" cy="-12" r="8")
                            circle.dot(cx="12" cy="12" r="5")
                            circle.drop(cx="12" cy="12" r="2")
                    label.radio
                        input(type="radio" name="radio" value="2")
                        svg(viewBox="0 0 24 24" filter="url(#goo-light)")
                            circle.top(cx="12" cy="-12" r="8")
                            circle.dot(cx="12" cy="12" r="5")
                            circle.drop(cx="12" cy="12" r="2")

            //- include ../particles/footer

            include ../particles/gnb

            script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js")
            script(src="./assets/scripts/ui.common.js")
